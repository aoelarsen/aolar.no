---
import Header from '../components/Header.tsx'
import Footer from '../components/Footer.tsx'
import  metadata from '../components/Metadata.js'

const thisYear = new Date().getFullYear()
---
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <title>{metadata.title}</title>
    <meta name="description" content={metadata.description}>

    <link rel="icon" type="image/x-icon" href="./favicon.ico" />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lora:ital@0;1&family=Rubik:wght@300;400;600&display=swap" rel="stylesheet">

    <link rel="stylesheet" href={Astro.resolve("../styles/global.css")}>

</head>
<body class="min-h-screen bg-secondary text-primary dark:bg-primary dark:text-secondary">
    <div class="min-h-screen grid front-wrap max-w-screen-xl">
        <Header title='AOLar.no' subTitle='Anders Ã˜ksendal Larsen'/>

        <main class="grid">
            <section class="text-right p-4 h-2/4 self-center grid content-center w-11/12">
                <h2 class="font-sans text-bold text-4xl md:text-7xl">Frontend developer</h2>
                <p class="font-serif text-1xl md:text-2xl"> &hellip; working as a bicycle&nbsp;mechanic</p>
            </section>
           
        </main>

        <Footer thisYear={thisYear} />

    </div> <!-- Layout wrap -->    
</body>
</html>
